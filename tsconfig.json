{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "es2017.object", "dom"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    /* Strict Type-Checking Options */
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}