{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015.promise",
      "es2016",
      "es2017.object",
      "dom"
    ],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    /* Strict Type-Checking Options */
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}